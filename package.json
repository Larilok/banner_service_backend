{
   "license": "MIT",
   "scripts": {
      "build": "npx tsc",
      "lint": "standard src/**/*.ts",
      "start": "npx tsc && node ./dist/server.js",
      "devStart": "nodemon 'src/server.ts' --exec 'ts-node' src/server.ts -e ts,graphql"
   },
   "dependencies": {
      "@types/express": "^4.17.8",
      "@types/node": "^14.11.2",
      "express": "^4.17.1",
      "express-graphql": "^0.11.0",
      "graphql": "^15.3.0",
      "knex": "^0.21.6",
      "pg": "^8.4.0",
      "typescript": "^4.0.3"
   },
   "devDependencies": {
      "@typescript-eslint/eslint-plugin": "^4.3.0",
      "@typescript-eslint/parser": "^4.3.0",
      "nodemon": "^2.0.4",
      "standard": "^14.3.4",
      "ts-node": "^9.0.0"
   },
   "eslintConfig": {
      "rules": {
         "no-unused-vars": "off",
         "@typescript-eslint/no-unused-vars": "error"
      }
   },
   "standard": {
      "parser": "@typescript-eslint/parser",
      "plugins": [
         "@typescript-eslint/eslint-plugin"
      ],
      "ignore": [
         "node_modules/**",
         "dist/**"
      ]
   }
}
